    -I$(TOPDIR)/src/java.base/share/native/libfdlibm \
    -I$(SUPPORT_OUTPUTDIR)/headers/java.base \
    -DARCHPROPNAME='"$(OPENJDK_TARGET_CPU_OSARCH)"'

# Make it possible to override this variable
